
<h1>Listing Articles</h1>
 <%= link_to 'New article', new_task_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
	<th colspan="2"></th>
    <th></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
	  <td><%= link_to 'Destroy', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
